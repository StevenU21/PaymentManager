<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PaymentManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PaymentManager"
    xmlns:views="clr-namespace:PaymentManager.Views"
    Title="PaymentManager">

    <TabBar>
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Usuarios" Icon="users.png">
            <ShellContent
                Title="Usuarios"
                ContentTemplate="{DataTemplate views:UserPage}"
                Route="users" />
        </Tab>
        <!-- Agrega más tabs aquí si lo necesitas -->
    </TabBar>

</Shell>