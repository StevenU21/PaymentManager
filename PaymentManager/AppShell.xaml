<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PaymentManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PaymentManager"
    xmlns:views="clr-namespace:PaymentManager.Views"
    xmlns:sfAvatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    Title="PaymentManager"
    Shell.FlyoutBackgroundColor="#181818"
    Shell.FlyoutWidth="260"
    Shell.TitleColor="#FAFAFA"
    Shell.DisabledColor="#B0B0B0"
    Shell.UnselectedColor="#B0B0B0"
    Shell.TabBarBackgroundColor="#181818"
    Shell.TabBarForegroundColor="#FAFAFA">

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="24,48,24,16" Spacing="8" BackgroundColor="#181818">
            <Image Source="logo_02.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,0,0,8"/>
            <Label Text="PaymentManager" FontSize="22" FontAttributes="Bold" TextColor="#FAFAFA" HorizontalOptions="Center"/>
            <Label Text="GestiÃ³n de pagos y usuarios" FontSize="14" TextColor="#B0B0B0" HorizontalOptions="Center"/>
            <BoxView HeightRequest="1" Color="#232323" Margin="0,12,0,0"/>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="16,0,16,24" Spacing="8" BackgroundColor="#181818">
            <BoxView HeightRequest="1" Color="#232323" Margin="0,0,0,8"/>
            <Label Text="Desarrollado por" FontSize="12" TextColor="#B0B0B0" HorizontalOptions="Start"/>
            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center" Padding="0">
                <Border BackgroundColor="#3B82F6" WidthRequest="36" HeightRequest="36" Stroke="#3B82F6" StrokeThickness="0" 
                        HorizontalOptions="Start" VerticalOptions="Center" StrokeShape="RoundRectangle" Margin="0,0,8,0">
                    <Label Text="DU" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold" FontSize="14"/>
                </Border>
                <HorizontalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                    <Label Text="Deifhelt Ulloa" FontSize="14" TextColor="#FAFAFA" VerticalOptions="Center"/>
                    <ImageButton Source="github.png" WidthRequest="22" HeightRequest="22" BackgroundColor="Transparent" 
                                 Clicked="OnGitHubButtonClicked" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

    <FlyoutItem Title="Inicio" Route="MainPage" Icon="home.png">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Usuarios" Icon="users.png">
        <ShellContent Route="users" ContentTemplate="{DataTemplate views:UserPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Metodos de Pago" Icon="credit_card.png">
        <ShellContent Route="paymentMethods" ContentTemplate="{DataTemplate views:PaymentMethodPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Planes de Pago" Icon="market.png">
        <ShellContent Route="paymentPlans" ContentTemplate="{DataTemplate views:PaymentPlanPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Pagos de Planes de Usuarios" Icon="customer.png">
        <ShellContent Route="userpaymentPlans" ContentTemplate="{DataTemplate views:UserPaymentPlansPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Pagos" Icon="bill.png">
        <ShellContent Route="payments" ContentTemplate="{DataTemplate views:PaymentPage}" />
    </FlyoutItem>

</Shell>