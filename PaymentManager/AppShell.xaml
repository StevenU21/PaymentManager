<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PaymentManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PaymentManager"
    xmlns:views="clr-namespace:PaymentManager.Views"
    Title="PaymentManager">

    <FlyoutItem Title="Inicio" Route="MainPage">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Usuarios" Icon="users.png">
        <ShellContent Route="users" ContentTemplate="{DataTemplate views:UserPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Tipo de Pagos" Icon="tipos_pagos.png">
        <ShellContent Route="paymentTypes" ContentTemplate="{DataTemplate views:PaymentTypePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Metodos de Pago" Icon="metodos_pagos.png">
        <ShellContent Route="paymentMethods" ContentTemplate="{DataTemplate views:PaymentMethodPage}" />
    </FlyoutItem>

</Shell>