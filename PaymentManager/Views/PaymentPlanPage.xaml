<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaymentManager.Views.PaymentPlanPage"
             x:Name="PaymentPlanPageRoot"
             Title="Planes de Pago"
             BackgroundColor="#181818">

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="10">
            <Button Text="âž• Registrar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding RegisterPaymentPlanCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding PaymentPlans}"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="16"
                                BackgroundColor="#232323"
                                Stroke="#444"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="4,4"
                                        Radius="8"
                                        Opacity="0.5"/>
                            </Border.Shadow>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="ðŸ“¦ "/>
                                                <Span Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#FAFAFA"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="ðŸ“… "/>
                                                <Span Text="{Binding DayOfMonthToPay}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="ðŸ’² "/>
                                                <Span Text="{Binding TotalAmount, StringFormat='{0:C}'}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Button Text="âœï¸ Editar"
                                            Command="{Binding BindingContext.EditPaymentPlanCommand, Source={x:Reference PaymentPlanPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#1976D2"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                    <Button Text="ðŸ—‘ï¸ Eliminar"
                                            Command="{Binding BindingContext.DeletePaymentPlanCommand, Source={x:Reference PaymentPlanPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#D32F2F"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>