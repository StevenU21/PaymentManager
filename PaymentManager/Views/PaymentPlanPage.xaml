<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaymentManager.Views.PaymentPlanPage"
             x:Name="PaymentPlanPageRoot"
             Title="Planes de Pago"
             BackgroundColor="#181818">

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="10">
            <Button Text="Registrar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding RegisterPaymentPlanCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="44"/>

            <CollectionView ItemsSource="{Binding PaymentPlans}"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="16"
                                BackgroundColor="#232323"
                                Stroke="#444"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="4,4"
                                        Radius="8"
                                        Opacity="0.5"/>
                            </Border.Shadow>
                            <VerticalStackLayout>
                                <Label Text="{Binding Name, StringFormat='Nombre: {0}'}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#FAFAFA"/>
                                <Label Text="{Binding DayOfMonth, StringFormat='DÃ­a de pago: {0:dd}'}"
                                       FontSize="14"
                                       TextColor="#B0B0B0"
                                       Margin="0,2,0,0"/>
                                <Label Text="{Binding Amount, StringFormat='Monto: {0:C}'}"
                                       FontSize="14"
                                       TextColor="#B0B0B0"
                                       Margin="0,2,0,0"/>
                                <Label Text="{Binding Active, StringFormat='Activo: {0}'}"
                                       FontSize="14"
                                       TextColor="#B0B0B0"
                                       Margin="0,2,0,0"/>
                                <HorizontalStackLayout Spacing="10"
                                                       Margin="0,10,0,0">
                                    <Button Text="Editar"
                                            Command="{Binding BindingContext.EditPaymentPlanCommand, Source={x:Reference PaymentPlanPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#1976D2"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"
                                            HeightRequest="36"
                                            WidthRequest="80"/>
                                    <Button Text="Eliminar"
                                            Command="{Binding BindingContext.DeletePaymentPlanCommand, Source={x:Reference PaymentPlanPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#B00020"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"
                                            HeightRequest="36"
                                            WidthRequest="80"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>