<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PaymentManager.Views.UserPage"
             x:Name="UserPageRoot"
             Title="Usuarios"
             BackgroundColor="#181818">

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="10">
            <Button Text="➕ Registrar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding RegisterUserCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding Users}"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="16"
                                BackgroundColor="#232323"
                                Stroke="#444"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="4,4"
                                        Radius="8"
                                        Opacity="0.5"/>
                            </Border.Shadow>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <!-- Columna 0: Nombre, Correo y Teléfono en vertical -->
                                <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="👤 " FontSize="18"/>
                                                <Span Text="{Binding Name}"
                                                        FontAttributes="Bold"
                                                        FontSize="18"
                                                        TextColor="#FAFAFA"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="✉️ "
                                                        FontSize="14"/>
                                                <Span Text="{Binding Email}"
                                                        FontSize="14"
                                                        TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                        <Label.Margin>
                                            <Thickness Left="0"
                                                    Top="2"
                                                    Right="0"
                                                    Bottom="0"/>
                                        </Label.Margin>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📞 " FontSize="16"/>
                                                <Span Text="{Binding Phone}" FontSize="16" TextColor="#FAFAFA"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>
                                <!-- Columna 1: Botones en vertical -->
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Button Text="✏️ Editar"
                                            Command="{Binding BindingContext.EditUserCommand, Source={x:Reference UserPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#1976D2"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                    <Button Text="🗑️ Eliminar"
                                            Command="{Binding BindingContext.DeleteUserCommand, Source={x:Reference UserPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#D32F2F"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>