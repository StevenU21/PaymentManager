<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaymentManager.Views.UserPaymentPlansPage"
             x:Name="UserPaymentPlansPageRoot"
             Title="Relaciones Usuario-Plan"
             BackgroundColor="#181818">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Button Text="➕ Registrar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding RegisterUserPaymentPlanCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding UserPaymentPlans}"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="16"
                                BackgroundColor="#232323"
                                Stroke="#444"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="4,4"
                                        Radius="8"
                                        Opacity="0.5"/>
                            </Border.Shadow>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="👤 "/>
                                                <Span Text="{Binding User.Name}" FontAttributes="Bold" FontSize="16" TextColor="#FAFAFA"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📦 "/>
                                                <Span Text="{Binding PaymentPlan.Name}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="💲 "/>
                                                <Span Text="{Binding ShareAmount, StringFormat='{0:C2}'}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📅 "/>
                                                <Span Text="{Binding JoinDate, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="🔔 "/>
                                                <Span Text="{Binding Status}" FontSize="14" TextColor="#B0B0B0"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Button Text="✏️ Editar"
                                            Command="{Binding BindingContext.EditUserPaymentPlanCommand, Source={x:Reference UserPaymentPlansPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#1976D2"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                    <Button Text="🗑️ Eliminar"
                                            Command="{Binding BindingContext.DeleteUserPaymentPlanCommand, Source={x:Reference UserPaymentPlansPageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#D32F2F"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="13"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>