<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PaymentManager.Converters"
             x:Class="PaymentManager.Views.PaymentFormPage"
             Title="Registrar Pago"
             BackgroundColor="#181818">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToIntConverter x:Key="StringToIntConverter"/>
            <converters:StringToDecimalConverter x:Key="StringToDecimalConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:UserPaymentPlanDisplayConverter x:Key="UserPaymentPlanDisplayConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="10"
                             Margin="0,32,0,0"> <!-- Margen superior para alinear visualmente -->
            <Button Text="âŒ Cancelar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"/>
            <Border Padding="16"
                    BackgroundColor="#232323"
                    Stroke="#444"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="4,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label TextColor="#FAFAFA" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ“¦ Plan de Pago"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Picker ItemsSource="{Binding UserPaymentPlans}"
                            ItemDisplayBinding="{Binding ., Converter={StaticResource UserPaymentPlanDisplayConverter}}"
                            SelectedItem="{Binding SelectedUserPaymentPlan}"
                            Title="Selecciona"
                            TextColor="#FAFAFA"
                            BackgroundColor="#232323"/>
                    <Label TextColor="#FAFAFA" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ’³ MÃ©todo de Pago"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Picker ItemsSource="{Binding PaymentMethods}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedPaymentMethod}"
                            Title="Selecciona"
                            TextColor="#FAFAFA"
                            BackgroundColor="#232323"/>
                    <Label TextColor="#FAFAFA" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ’² Monto Pagado"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Entry Placeholder="Monto"
                           Text="{Binding AmountPaid, Converter={StaticResource StringToDecimalConverter}}"
                           Keyboard="Numeric"
                           TextColor="#FAFAFA"
                           PlaceholderColor="#B0B0B0"
                           BackgroundColor="#232323"/>
                    <Button Text="ðŸ’¾ Guardar"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#1976D2"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>