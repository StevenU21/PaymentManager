<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PaymentManager.Converters"
             x:Class="PaymentManager.Views.PaymentFormPage"
             Title="Registrar Pago"
             BackgroundColor="#181818">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToIntConverter x:Key="StringToIntConverter"/>
            <converters:StringToDecimalConverter x:Key="StringToDecimalConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="10">
            <Button Text="Cancelar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="44"/>

            <Border Padding="16"
                    BackgroundColor="#232323"
                    Stroke="#444"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="4,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">
                    <!-- Grid para Plan de Pago y Método de Pago -->
                    <Grid ColumnDefinitions="*,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="10">
                        <Label Text="Plan de Pago"
                               TextColor="#FAFAFA"
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="Método de Pago"
                               TextColor="#FAFAFA"
                               FontAttributes="Bold"
                               Grid.Column="1"/>
                        <Picker ItemsSource="{Binding UserPaymentPlans}"
                                ItemDisplayBinding="{Binding User.Name}"
                                SelectedItem="{Binding SelectedUserPaymentPlan}"
                                Title="Selecciona"
                                TextColor="#FAFAFA"
                                BackgroundColor="#181818"
                                Grid.Column="0"
                                Grid.Row="1"/>
                        <Picker ItemsSource="{Binding PaymentMethods}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedPaymentMethod}"
                                Title="Selecciona"
                                TextColor="#FAFAFA"
                                BackgroundColor="#181818"
                                Grid.Column="1"
                                Grid.Row="1"/>
                    </Grid>

                    <!-- Grid para Monto Pagado y Periodos Pagados -->
                    <Grid ColumnDefinitions="*,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="10">
                        <Label Text="Monto Pagado"
                               TextColor="#FAFAFA"
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="Periodos Pagados"
                               TextColor="#FAFAFA"
                               FontAttributes="Bold"
                               Grid.Column="1"/>
                        <Entry Placeholder="Monto"
                               Text="{Binding Payment.AmountPaid, Converter={StaticResource StringToDecimalConverter}}"
                               Keyboard="Numeric"
                               TextColor="#FAFAFA"
                               PlaceholderColor="#B0B0B0"
                               BackgroundColor="#181818"
                               Grid.Column="0"
                               Grid.Row="1"/>
                        <Entry Placeholder="Periodos"
                               Text="{Binding Payment.PeriodsPaid, Converter={StaticResource StringToIntConverter}}"
                               Keyboard="Numeric"
                               TextColor="#FAFAFA"
                               PlaceholderColor="#B0B0B0"
                               BackgroundColor="#181818"
                               Grid.Column="1"
                               Grid.Row="1"/>
                    </Grid>

                    <Button Text="Guardar"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#1976D2"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"
                            HeightRequest="44"/>
                </VerticalStackLayout>

            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>