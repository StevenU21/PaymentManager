<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PaymentManager.Converters"
             x:Class="PaymentManager.Views.PaymentPlanFormPage"
             Title="Plan de Pago"
             BackgroundColor="#181818">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToDecimalConverter x:Key="StringToDecimalConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Button Text="Cancelar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="44"/>

            <Border Padding="16"
                    BackgroundColor="#232323"
                    Stroke="#444"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="4,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">
                    <!-- Nombre del plan -->
                    <Label Text="Nombre"
                           TextColor="#FAFAFA"
                           FontAttributes="Bold"/>
                    <Entry Placeholder="Ej: Crunchyroll"
                           Text="{Binding PaymentPlan.Name}"
                           TextColor="#FAFAFA"
                           PlaceholderColor="#B0B0B0"
                           BackgroundColor="#181818"/>

                    <!-- Día de pago y Monto en la misma línea -->
                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label Text="Día de pago (1-31)"
                                   TextColor="#FAFAFA"
                                   FontAttributes="Bold"/>
                            <Entry Placeholder="Ej: 15"
                                   Text="{Binding PaymentPlan.DayOfMonthToPay}"
                                   Keyboard="Numeric"
                                   TextColor="#FAFAFA"
                                   PlaceholderColor="#B0B0B0"
                                   BackgroundColor="#181818"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Monto"
                                   TextColor="#FAFAFA"
                                   FontAttributes="Bold"/>
                            <Entry Placeholder="Monto"
                                   Text="{Binding PaymentPlan.TotalAmount, Converter={StaticResource StringToDecimalConverter}}"
                                   Keyboard="Numeric"
                                   TextColor="#FAFAFA"
                                   PlaceholderColor="#B0B0B0"
                                   BackgroundColor="#181818"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Eliminado el binding y visualización de IsRecurring -->

                    <Label Text="Activo"
                           TextColor="#FAFAFA"
                           FontAttributes="Bold"/>
                    <Switch IsToggled="{Binding PaymentPlan.Active}"/>

                    <Button Text="Guardar"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#1976D2"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"
                            HeightRequest="44"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>