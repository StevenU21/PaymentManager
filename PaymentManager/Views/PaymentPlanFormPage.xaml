<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PaymentManager.Converters"
             x:Class="PaymentManager.Views.PaymentPlanFormPage"
             Title="Plan de Pago"
             BackgroundColor="#181818">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToDecimalConverter x:Key="StringToDecimalConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10"
                           Spacing="10"
                           Margin="0,32,0,0">
            <Button Text="âŒ Cancelar"
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#2D2D2D"
                    TextColor="#FAFAFA"
                    CornerRadius="8"
                    FontAttributes="Bold"/>
            <Border Padding="16"
                    BackgroundColor="#232323"
                    Stroke="#444"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="4,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label TextColor="#FAFAFA" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ“¦ Nombre del plan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Entry Placeholder="Ej: Crunchyroll"
                           Text="{Binding PaymentPlan.Name}"
                           TextColor="#FAFAFA"
                           PlaceholderColor="#B0B0B0"
                           BackgroundColor="#232323"/>
                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label TextColor="#FAFAFA" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ðŸ“… DÃ­a de pago (1-31)"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Entry Placeholder="Ej: 15"
                                   Text="{Binding PaymentPlan.DayOfMonthToPay}"
                                   Keyboard="Numeric"
                                   TextColor="#FAFAFA"
                                   PlaceholderColor="#B0B0B0"
                                   BackgroundColor="#232323"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label TextColor="#FAFAFA" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ðŸ’² Monto"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Entry Placeholder="Monto"
                                   Text="{Binding PaymentPlan.TotalAmount, Converter={StaticResource StringToDecimalConverter}}"
                                   Keyboard="Numeric"
                                   TextColor="#FAFAFA"
                                   PlaceholderColor="#B0B0B0"
                                   BackgroundColor="#232323"/>
                        </VerticalStackLayout>
                    </Grid>
                    <Button Text="ðŸ’¾ Guardar"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#1976D2"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>